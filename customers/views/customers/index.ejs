<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customers</title>
</head>
<body>
    <h1>Customers</h1>
    <ul>
        <% customers.forEach(function(customer) { %>
        <li>
          <a href="/customers/<%= customer.id %>"><%= customer.first_name + " " + customer.last_name %></a> - <%= customer.company_name %>
        </li>
        <form action="/customers/<%= customer.id %>?_method=DELETE" class="delete-form" method="POST">
            <button type="submit">X</button>
        </form>
        <% }); %>
    </ul>

    <form action="/customers/new" method="GET">
        <button type="submit">Add Customer</button>
    </form>
 


</body>
</html>